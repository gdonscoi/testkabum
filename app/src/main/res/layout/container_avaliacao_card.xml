<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/container_avaliacao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/nome"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_toEndOf="@id/img_produto"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    tool:showIn="@layout/produto_card">

    <ImageView
        android:id="@+id/avaliacao_img1"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_img_avaliacao"
        android:src="@drawable/ic_star_black" />

    <ImageView
        android:id="@+id/avaliacao_img2"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_img_avaliacao"
        android:src="@drawable/ic_star_black" />

    <ImageView
        android:id="@+id/avaliacao_img3"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_img_avaliacao"
        android:src="@drawable/ic_star_black" />

    <ImageView
        android:id="@+id/avaliacao_img4"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_img_avaliacao"
        android:src="@drawable/ic_star_black" />

    <ImageView
        android:id="@+id/avaliacao_img5"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_img_avaliacao"
        android:src="@drawable/ic_star_black" />

    <TextView
        android:id="@+id/avaliacao_numero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        tool:text="111" />
</LinearLayout>
